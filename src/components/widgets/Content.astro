---
import type { Content as Props } from '~/types';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  callToAction,
  items = [],
  columns,
  image = await Astro.slots.render('image'),
  isReversed = false,
  isAfterContent = false,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  <div class="mx-auto max-w-7xl px-4 md:px-8 py-8 md:py-12">
    <div class={`md:flex ${isReversed ? 'md:flex-row-reverse' : ''} md:gap-12 lg:gap-16 items-center`}>
      <div class="md:basis-1/2">
        {content && <div class="mb-8 md:mb-12 text-base md:text-lg leading-relaxed dark:text-slate-400" set:html={content} />}

        {
          callToAction && (
            <div class="mt-[-40px] mb-8 text-primary">
              <Button variant="link" {...callToAction} />
            </div>
          )
        }

        <ItemGrid
          items={items}
          columns={columns}
          defaultIcon="tabler:check"
          classes={{
            container: `gap-y-6 md:gap-y-8`,
            panel: 'max-w-none',
            title: 'text-base md:text-lg font-bold leading-relaxed text-[#01407a] ml-2 rtl:ml-0 rtl:mr-2',
            description: 'text-sm md:text-base text-gray-700 leading-relaxed ml-2 rtl:ml-0 rtl:mr-2 mt-1',
            icon: 'flex h-7 w-7 items-center justify-center text-[#C9A227] stroke-[1.5] flex-shrink-0',
            action: 'text-base md:text-lg font-medium leading-6 text-[#01407a] ml-2 rtl:ml-0 rtl:mr-2',
          }}
        />
      </div>
      <div aria-hidden="true" class="mt-12 md:mt-0 md:basis-1/2">
        {
          image && (
            <div class="relative m-auto max-w-4xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <img
                  class="mx-auto w-full rounded-xl bg-gray-500 shadow-2xl hover:shadow-3xl transition-shadow duration-300"
                  src={(image as any).src}
                  alt={(image as any).alt}
                  width={(image as any).width || 800}
                  height={(image as any).height || 600}
                  loading="lazy"
                  decoding="async"
                />
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
</WidgetWrapper>
