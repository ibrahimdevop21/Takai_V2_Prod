---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import { createMetadata } from '~/utils/metadata';

const metadata = createMetadata({
  title: 'TAKAI at Japan Mobility Show 2025 – Innovation Meets Precision',
  description: 'Visit TAKAI at Japan Mobility Show 2025, Tokyo Big Sight West Hall 3, Booth W3003. October 30 - November 9, 2025. Experience our latest Premium Plus PPF and UV Nano Ceramic Films.',
  canonical: '/news/japan-mobility-show-2025',
  type: 'article',
});
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#0A0A1A] via-[#0A0A1A] to-[#1a1a2e] text-white py-20 md:py-32">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="text-center lg:text-left flex flex-col justify-center space-y-6">
          
          <!-- Main Title -->
          <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-[#C9A227] uppercase tracking-wider leading-tight">
            TAKAI at Japan<br>
            <span class="text-white">Mobility Show</span><br>
            <span class="text-[#C9A227]">2025</span>
          </h1>
          
          <!-- Subtitle -->
          <p class="text-lg sm:text-xl md:text-2xl text-[#E5E7EB] font-light tracking-wide">
            Innovation Meets Precision
          </p>
        </div>
        
        <!-- Image Content -->
        <div class="flex justify-center lg:justify-end">
          <div class="relative group">
            <img 
              src="/jap-show-25/img_01.webp" 
              alt="TAKAI at Japan Mobility Show 2025" 
              class="max-w-full w-full max-w-md lg:max-w-lg xl:max-w-xl transition-transform duration-300 group-hover:scale-105 hover-glow-hero"
              loading="eager"
            />
            <!-- Optional subtle glow effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-[#C9A227]/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Event Details Section -->
  <section class="bg-[#0A0A1A] py-16 md:py-24 border-t border-[#C9A227]/20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-center">
        <!-- Event Information -->
        <div class="space-y-8">
          <h2 class="text-3xl md:text-4xl font-bold text-[#C9A227] uppercase tracking-wider">
            Event Details
          </h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <Icon name="tabler:calendar" class="w-6 h-6 text-[#C9A227] mt-1 flex-shrink-0" />
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Event</h3>
                <p class="text-[#E5E7EB]">Japan Mobility Show 2025</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <Icon name="tabler:map-pin" class="w-6 h-6 text-[#C9A227] mt-1 flex-shrink-0" />
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Venue</h3>
                <p class="text-[#E5E7EB]">Tokyo Big Sight, Tokyo, Japan</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <Icon name="tabler:building" class="w-6 h-6 text-[#C9A227] mt-1 flex-shrink-0" />
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Hall / Booth</h3>
                <p class="text-[#E5E7EB]">West Hall 3 – <span class="text-[#C9A227] font-semibold">Booth W3003</span></p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <Icon name="tabler:clock" class="w-6 h-6 text-[#C9A227] mt-1 flex-shrink-0" />
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Date</h3>
                <p class="text-[#E5E7EB]">30 October – 9 November 2025</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <Icon name="tabler:building-factory-2" class="w-6 h-6 text-[#C9A227] mt-1 flex-shrink-0" />
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Organized by</h3>
                <p class="text-[#E5E7EB]">Nippon TAKAI Trading & Innovation Co., Ltd.</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Visual Element -->
        <div class="relative flex justify-center">
          <img 
            src="/jap-show-25/kv03_pc.webp" 
            alt="TAKAI Japan Mobility Show 2025 - Visit Booth W3003" 
            class="max-w-full w-full max-w-xl lg:max-w-2xl xl:max-w-3xl transition-transform duration-300 hover:scale-105 hover-glow-hero"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Innovation Section -->
  <section class="bg-gradient-to-br from-[#0A0A1A] to-[#1a1a2e] py-16 md:py-24 border-t border-[#C9A227]/20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-12">
        <div class="space-y-6">
          <h2 class="text-3xl md:text-4xl font-bold text-[#C9A227] uppercase tracking-wider">
            Innovation & Precision
          </h2>
          <div class="h-px bg-gradient-to-r from-transparent via-[#C9A227] to-transparent w-32 mx-auto"></div>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <p class="text-lg md:text-xl text-[#E5E7EB] leading-relaxed mb-8">
            TAKAI represents the pinnacle of Japanese automotive protection technology. Our mission is to deliver 
            invisible armor that preserves the pristine beauty of your most precious investments while maintaining 
            the highest standards of optical clarity and durability.
          </p>
          
          <p class="text-lg text-[#E5E7EB] leading-relaxed">
            At Japan Mobility Show 2025, we showcase our commitment to innovation through precision engineering, 
            advanced materials science, and the unwavering pursuit of perfection that defines Japanese craftsmanship.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Showcase Section -->
  <section class="bg-[#0A0A1A] py-16 md:py-24 border-t border-[#C9A227]/20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-12">
        <div class="space-y-6">
          <h2 class="text-3xl md:text-4xl font-bold text-[#C9A227] uppercase tracking-wider">
            Featured Products
          </h2>
          <div class="h-px bg-gradient-to-r from-transparent via-[#C9A227] to-transparent w-32 mx-auto"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 md:gap-12">
          <!-- Premium Plus PPF -->
          <div class="bg-gradient-to-br from-[#C9A227]/5 to-transparent p-8 rounded-2xl border border-[#C9A227]/20">
            <div class="space-y-6">
              <div class="w-16 h-16 bg-[#C9A227] rounded-full flex items-center justify-center mx-auto">
                <Icon name="tabler:shield-check" class="w-8 h-8 text-[#0A0A1A]" />
              </div>
              
              <h3 class="text-2xl font-bold text-[#C9A227] uppercase tracking-wider">
                Premium Plus PPF
              </h3>
              
              <p class="text-[#E5E7EB] leading-relaxed">
                Our flagship paint protection film featuring advanced self-healing technology, 
                superior hydrophobic coating, and industry-leading 15-year warranty coverage. 
                Engineered for luxury and high-performance vehicles.
              </p>
              
              <div class="space-y-2">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-[#BF1E2E] rounded-full"></div>
                  <span class="text-[#E5E7EB] text-sm">Self-Healing Technology</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-[#BF1E2E] rounded-full"></div>
                  <span class="text-[#E5E7EB] text-sm">15-Year Warranty</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-[#BF1E2E] rounded-full"></div>
                  <span class="text-[#E5E7EB] text-sm">Enhanced Stain Resistance</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- UV Nano Ceramic Films -->
          <div class="bg-gradient-to-br from-[#C9A227]/5 to-transparent p-8 rounded-2xl border border-[#C9A227]/20">
            <div class="space-y-6">
              <div class="w-16 h-16 bg-[#C9A227] rounded-full flex items-center justify-center mx-auto">
                <Icon name="tabler:sun" class="w-8 h-8 text-[#0A0A1A]" />
              </div>
              
              <h3 class="text-2xl font-bold text-[#C9A227] uppercase tracking-wider">
                UV Nano Ceramic Films
              </h3>
              
              <p class="text-[#E5E7EB] leading-relaxed">
                Revolutionary nano-ceramic technology providing exceptional UV protection, 
                heat rejection, and optical clarity. Perfect for windows and sensitive 
                surfaces requiring advanced thermal management.
              </p>
              
              <div class="space-y-2">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-[#BF1E2E] rounded-full"></div>
                  <span class="text-[#E5E7EB] text-sm">99% UV Protection</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-[#BF1E2E] rounded-full"></div>
                  <span class="text-[#E5E7EB] text-sm">Superior Heat Rejection</span>
                </div>
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-[#BF1E2E] rounded-full"></div>
                  <span class="text-[#E5E7EB] text-sm">Crystal Clear Optics</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="bg-gradient-to-br from-[#0A0A1A] via-[#1a1a2e] to-[#0A0A1A] py-16 md:py-24 border-t border-[#C9A227]/20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="space-y-8">
        <h2 class="text-3xl md:text-4xl font-bold text-[#C9A227] uppercase tracking-wider">
          Book Your Meeting
        </h2>
        
        <p class="text-lg md:text-xl text-[#E5E7EB] leading-relaxed">
          Schedule a private consultation with TAKAI representatives at the Japan Mobility Show. 
          Discover how our premium protection solutions can safeguard your most valuable investments.
        </p>
        
        <!-- Gold Divider -->
        <div class="flex items-center justify-center py-6">
          <div class="h-px bg-gradient-to-r from-transparent via-[#C9A227] to-transparent w-32"></div>
          <div class="w-2 h-2 bg-[#BF1E2E] rounded-full mx-4"></div>
          <div class="h-px bg-gradient-to-r from-transparent via-[#C9A227] to-transparent w-32"></div>
        </div>
        
        <div class="space-y-4">
          <a 
            href="/contact?subject=Exhibition%20Inquiry"
            class="inline-flex items-center gap-3 bg-[#C9A227] hover:bg-[#C9A227]/90 text-[#0A0A1A] px-6 py-3 rounded-lg font-semibold text-lg uppercase tracking-wider transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            <Icon name="tabler:calendar" class="w-5 h-5" />
            Book Meeting
          </a>
          
          <p class="text-sm text-[#E5E7EB]/70">
            Contact form will be pre-filled with "Exhibition Inquiry"
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Back to News Section -->
  <section class="bg-[#0A0A1A] py-8 border-t border-[#C9A227]/20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <a 
          href="/"
          class="inline-flex items-center gap-2 text-[#E5E7EB] hover:text-[#C9A227] transition-colors duration-300 text-sm uppercase tracking-wider"
        >
          <Icon name="tabler:arrow-left" class="w-4 h-4" />
          Back to Home
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Custom animations for scroll effects */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  /* Hover-only glow effect for hero images */
  .hover-glow-hero {
    border-radius: 8px;
    box-shadow: 0 0 5px rgba(201, 162, 39, 0.2), 0 0 10px rgba(201, 162, 39, 0.1), 0 0 15px rgba(201, 162, 39, 0.05);
    transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
  }
  
  /* Enhanced hover effect */
  .hover-glow-hero:hover,
  .group:hover .hover-glow-hero {
    box-shadow: 0 0 20px rgba(201, 162, 39, 0.8), 0 0 30px rgba(201, 162, 39, 0.6), 0 0 40px rgba(201, 162, 39, 0.4);
    transform: scale(1.02);
  }
  
  /* Remove initial opacity to prevent hydration mismatch */
  /* Animation states will be set via JavaScript after hydration */
</style>

<script is:inline>
  // Scroll animations - runs after hydration
  function initScrollAnimations() {
    // Wait for next tick to ensure DOM is fully hydrated
    setTimeout(() => {
      const sections = document.querySelectorAll('section');
      
      // Set initial state via JavaScript to avoid hydration mismatch
      sections.forEach((section) => {
        section.style.opacity = '0';
        section.style.transform = 'translateY(20px)';
        section.style.transition = 'opacity 0.8s ease-out, transform 0.8s ease-out';
      });
      
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        },
        { threshold: 0.1 }
      );
      
      sections.forEach((section) => {
        observer.observe(section);
      });
    }, 100);
  }
  
  // Use window load event to ensure complete hydration
  if (document.readyState === 'complete') {
    initScrollAnimations();
  } else {
    window.addEventListener('load', initScrollAnimations);
  }
</script>
