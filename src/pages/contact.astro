---
import Layout from '~/layouts/PageLayout.astro';
import TakaiContactForm from '~/components/widgets/TakaiContactForm.astro';
import Content from '~/components/widgets/Content.astro';
import Hero from '~/components/widgets/Hero.astro';
import { Icon } from 'astro-icon/components';
import { PAGE_METADATA } from '~/utils/metadata';
---

<Layout metadata={PAGE_METADATA.contact}>
  <!-- Hero Section -->
  <Hero
    responsive={true}
    image={{
      src: '/images/hero-car-3.webp',
      alt: 'Professional TAKAI paint protection film installation',
      width: 1920,
      height: 1080
    }}
  >
    <Fragment slot="title">
      Get in Touch with TAKAI
    </Fragment>

    <Fragment slot="subtitle">
      Have questions about our premium Japanese paint protection films? Our expert team is here to help.
    </Fragment>

    <Fragment slot="tagline">
      Contact Us
    </Fragment>
    <Fragment slot="actions">
      <a
        href="#contact-form"
        class="bg-takai-gold hover:bg-takai-gold/90 text-black font-medium text-sm md:text-base px-5 py-2 md:px-6 md:py-3 rounded-lg shadow-md transition-all duration-300 whitespace-nowrap inline-flex items-center"
      >
        <Icon name="tabler:message" class="w-5 h-5 mr-2" />
        Send Message
      </a>
      <a
        href="/faq"
        class="bg-takai-blue hover:bg-blue-900 text-white font-medium text-sm md:text-base px-5 py-2 md:px-6 md:py-3 rounded-lg shadow-md transition-all duration-300 whitespace-nowrap inline-flex items-center"
      >
        <Icon name="tabler:help" class="w-5 h-5 mr-2" />
        View FAQ
      </a>
    </Fragment>
  </Hero>
  
  <!-- Modern TAKAI Contact Form -->
  <TakaiContactForm id="contact-form" />

  <!-- Contact Information -->
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-takai-blue mb-4">Multiple Ways to Reach Us</h2>
        <p class="text-gray-700">Choose the contact method that works best for you</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:shopping-bag" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Sales Inquiries</h3>
          <p class="text-gray-700 mb-4">Product information, pricing, and availability for distributors and installers.</p>
          <a href="mailto:sales@takaifilms.jp" class="text-takai-gold hover:text-takai-gold/80 font-medium inline-flex items-center">
            <Icon name="tabler:mail" class="w-4 h-4 mr-1" />
            sales@takaifilms.jp
          </a>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:users" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Partnership Opportunities</h3>
          <p class="text-gray-700 mb-4">Interested in becoming a TAKAI distributor or certified installer? Let's talk.</p>
          <a href="mailto:partners@takaifilms.jp" class="text-takai-gold hover:text-takai-gold/80 font-medium inline-flex items-center">
            <Icon name="tabler:mail" class="w-4 h-4 mr-1" />
            partners@takaifilms.jp
          </a>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:mail" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Email Support</h3>
          <a href="mailto:info@takaifilms.jp" class="text-takai-gold hover:text-takai-gold/80 font-medium inline-block mb-2">
            info@takaifilms.jp
          </a>
          <p class="text-sm text-gray-600">Response within 24 hours</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:map-pin" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Head Office</h3>
          <p class="text-gray-800 mb-1 font-medium">Nippon Takai Trading & Innovation Co., Ltd.</p>
          <p class="text-gray-700 text-sm leading-relaxed">
            3-1-6 Motoazabu, Minato-ku<br>
            Tokyo 106-0046, Japan
          </p>
        </div>
      </div>
    </div>
  </div>

</Layout>
