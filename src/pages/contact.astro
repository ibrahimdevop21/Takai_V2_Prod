---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import TakaiContactForm from '~/components/widgets/TakaiContactForm.astro';
import Content from '~/components/widgets/Content.astro';
import { Icon } from 'astro-icon/components';
import { PAGE_METADATA } from '~/utils/metadata';
---

<Layout metadata={PAGE_METADATA.contact}>
  <!-- Hero Section -->
  <Hero
    tagline="Get in Touch"
    title="Contact TAKAI"
    subtitle="Whether you're looking for product information, technical support, or partnership opportunities, we're here to help."
    actions={[
      {
        text: 'Find Distributor',
        href: '/distributors',
        icon: 'tabler:map-pin',
        class: 'group relative bg-gradient-to-r from-[#C9A227] to-[#D4B332] hover:from-[#D4B332] hover:to-[#C9A227] text-black font-semibold text-sm md:text-base px-6 py-3 md:px-8 md:py-4 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 whitespace-nowrap overflow-hidden',
      },
      { 
        text: 'Our Products', 
        href: '/products',
        icon: 'tabler:package',
        class: 'group relative bg-transparent border-2 border-white/30 hover:border-[#C9A227] text-white hover:text-[#C9A227] font-semibold text-sm md:text-base px-6 py-3 md:px-8 md:py-4 rounded-full backdrop-blur-sm hover:backdrop-blur-md shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 whitespace-nowrap'
      },
    ]}
    image={{
      src: '/images/hero-car-1.webp',
      alt: 'Luxury sports car protected by TAKAI films - contact us for expert consultation',
      width: 1920,
      height: 1080
    }}
  />

  <!-- Modern TAKAI Contact Form -->
  <TakaiContactForm />

  <!-- Contact Information -->
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-takai-blue mb-4">Multiple Ways to Reach Us</h2>
        <p class="text-gray-700">Choose the contact method that works best for you</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:shopping-bag" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Sales Inquiries</h3>
          <p class="text-gray-700">Product information, pricing, and availability for distributors and installers.</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:users" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Partnership Opportunities</h3>
          <p class="text-gray-700">Interested in becoming a TAKAI distributor or certified installer? Let's talk.</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:mail" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Email Support</h3>
          <p class="text-gray-800 mb-2 font-medium">info@takaifilms.jp</p>
          <p class="text-sm text-gray-600">Within 24 hours</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:map-pin" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Head Office</h3>
          <p class="text-gray-800 mb-1 font-medium">Nippon Takai Trading & Innovation Co., Ltd.</p>
          <p class="text-gray-700 text-sm leading-relaxed">
            3-1-6 Motoazabu, Minato-ku<br>
            Tokyo 106-0046, Japan
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Additional Support -->
  <Content
    title="Additional Resources"
    subtitle="Find answers and support"
    items={[
      {
        title: 'Installation Training',
        description: 'Comprehensive training programs for new and existing installers.',
      },
      {
        title: 'Technical Documentation',
        description: 'Access installation guides, product specifications, and best practices.',
      },
      {
        title: 'Warranty Support',
        description: 'Get assistance with warranty claims and product performance issues.',
      },
    ]}
  />
</Layout>
