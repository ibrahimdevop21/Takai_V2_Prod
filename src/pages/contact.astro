---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import TakaiContactForm from '~/components/widgets/TakaiContactForm.astro';
import Content from '~/components/widgets/Content.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contact - TAKAI Paint Protection Films',
  description: 'Get in touch with TAKAI for product information, technical support, or partnership opportunities.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Get in Touch"
    title="Contact TAKAI"
    subtitle="Whether you're looking for product information, technical support, or partnership opportunities, we're here to help."
    actions={[
      { text: 'Find Distributor', href: '/distributors', variant: 'primary' },
      { text: 'Our Products', href: '/products', variant: 'secondary' },
    ]}
    image={{
      src: '/images/hero-car-1.jpg',
      alt: 'Luxury sports car protected by TAKAI films - contact us for expert consultation',
      width: 1920,
      height: 1080
    }}
  />

  <!-- Modern TAKAI Contact Form -->
  <TakaiContactForm />

  <!-- Contact Information -->
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-takai-blue mb-4">Multiple Ways to Reach Us</h2>
        <p class="text-gray-600">Choose the contact method that works best for you</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:shopping-bag" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Sales Inquiries</h3>
          <p class="text-gray-600">Product information, pricing, and availability for distributors and installers.</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
          <div class="mb-4">
            <Icon name="tabler:users" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Partnership Opportunities</h3>
          <p class="text-gray-600">Interested in becoming a TAKAI distributor or certified installer? Let's talk.</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md text-center md:col-span-2">
          <div class="mb-4">
            <Icon name="tabler:mail" class="w-10 h-10 text-[#0A2540] stroke-[1.5] mx-auto" />
          </div>
          <h3 class="text-lg md:text-xl font-semibold text-takai-blue mb-3">Email Support</h3>
          <p class="text-gray-600 mb-2">info@takaifilms.jp</p>
          <p class="text-sm text-gray-500">We reply within 1 day</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Additional Support -->
  <Content
    title="Additional Resources"
    subtitle="Find answers and support"
    items={[
      {
        title: 'Installation Training',
        description: 'Comprehensive training programs for new and existing installers.',
      },
      {
        title: 'Technical Documentation',
        description: 'Access installation guides, product specifications, and best practices.',
      },
      {
        title: 'Warranty Support',
        description: 'Get assistance with warranty claims and product performance issues.',
      },
    ]}
  />
</Layout>
