---
import Layout from '~/layouts/PageLayout.astro';
import { createMetadata } from '~/utils/metadata';
import { Icon } from 'astro-icon/components';

const metadata = createMetadata({
  title: 'Page Not Found - 404',
  description: 'The page you are looking for could not be found. Return to TAKAI Films Japan homepage.',
  canonical: '/404',
  noindex: true,
});
---

<Layout metadata={metadata}>
  <section class="relative min-h-screen bg-gradient-to-br from-[#0A0A1A] via-[#0A0A1A] to-[#1a1a2e] text-white flex items-center justify-center py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      
      <!-- Japanese Accent -->
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-1 h-16 bg-[#BF1E2E]"></div>
        <div class="w-3 h-3 bg-[#BF1E2E] rounded-full"></div>
        <div class="w-1 h-16 bg-[#BF1E2E]"></div>
      </div>

      <!-- 404 Number -->
      <h1 class="text-8xl md:text-9xl font-bold text-[#C9A227] mb-8 tracking-wider">
        404
      </h1>

      <!-- Error Message -->
      <h2 class="text-2xl md:text-3xl font-semibold text-white mb-6">
        Page Not Found
      </h2>
      
      <p class="text-lg md:text-xl text-[#E5E7EB] mb-8 max-w-2xl mx-auto leading-relaxed">
        The page you're looking for has moved or doesn't exist. 
        <br class="hidden md:inline">
        Let us help you find what you need.
      </p>

      <!-- Gold Divider -->
      <div class="flex items-center justify-center py-6 mb-8">
        <div class="h-px bg-gradient-to-r from-transparent via-[#C9A227] to-transparent w-32"></div>
        <div class="w-2 h-2 bg-[#BF1E2E] rounded-full mx-4"></div>
        <div class="h-px bg-gradient-to-r from-transparent via-[#C9A227] to-transparent w-32"></div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <a 
          href="/" 
          class="inline-flex items-center gap-2 bg-[#C9A227] hover:bg-[#C9A227]/90 text-[#0A0A1A] px-6 py-3 rounded-lg font-semibold text-lg uppercase tracking-wider transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          <Icon name="tabler:home" class="w-5 h-5" />
          Back to Home
        </a>
        
        <a 
          href="/products" 
          class="inline-flex items-center gap-2 bg-transparent border border-[#C9A227] text-[#C9A227] hover:bg-[#C9A227] hover:text-[#0A0A1A] px-6 py-3 rounded-lg font-medium text-lg uppercase tracking-wider transition-all duration-300"
        >
          <Icon name="tabler:package" class="w-5 h-5" />
          View Products
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
        <a href="/products" class="text-[#E5E7EB] hover:text-[#C9A227] transition-colors duration-300 text-sm uppercase tracking-wider">
          Products
        </a>
        <a href="/company" class="text-[#E5E7EB] hover:text-[#C9A227] transition-colors duration-300 text-sm uppercase tracking-wider">
          Company
        </a>
        <a href="/distributors" class="text-[#E5E7EB] hover:text-[#C9A227] transition-colors duration-300 text-sm uppercase tracking-wider">
          Distributors
        </a>
        <a href="/contact" class="text-[#E5E7EB] hover:text-[#C9A227] transition-colors duration-300 text-sm uppercase tracking-wider">
          Contact
        </a>
      </div>

      <!-- TAKAI Branding -->
      <div class="mt-16 pt-8 border-t border-[#C9A227]/20">
        <p class="text-[#C9A227] font-semibold text-lg tracking-wider uppercase">
          TAKAI Films Japan
        </p>
        <p class="text-[#E5E7EB]/70 text-sm mt-2">
          Invisible Armor for Your Most Precious Investment
        </p>
      </div>
    </div>
  </section>
</Layout>
