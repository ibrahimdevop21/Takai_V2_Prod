---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Distributors - TAKAI Paint Protection Films',
  description: 'Find authorized TAKAI distributors and installers near you. Join our network of certified professionals.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Find a Professional"
    title="TAKAI Distributors & Installers"
    subtitle="Locate certified TAKAI distributors and installers in your area for professional paint protection film installation."
    actions={[
      { text: 'View Partners', href: '#certified-partners', variant: 'primary' },
      { text: 'Become a Partner', href: '#become-partner', variant: 'secondary' },
    ]}
    image={{
      src: '/images/hero-car-5.webp',
      alt: 'Premium vehicle with professional TAKAI installation by certified distributors',
      width: 1920,
      height: 1080
    }}
  />

