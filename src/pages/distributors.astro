            <Icon name="tabler:award" class="w-4 h-4 mr-1" />
            Authorized Distributor Hub
          </div>
        </div>

        <!-- Europe -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6 text-center hover:shadow-xl transition-all duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl">
            ðŸ‡­ðŸ‡·
          </div>
          <h3 class="text-lg font-semibold text-[#01407a] mb-2">Croatia</h3>
