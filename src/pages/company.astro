---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';
import { PAGE_METADATA } from '~/utils/metadata';
---

<Layout metadata={PAGE_METADATA.company}>
  <!-- Hero Section -->
  <Hero
    responsive={true}
    tagline="About TAKAI"
    title="Protecting What Matters Most"
    subtitle="Since our founding, TAKAI has been dedicated to developing the world's finest paint protection films through innovation, quality, and unwavering commitment to excellence."
    actions={[
      {
        text: 'Our Products',
        href: '/products',
        icon: 'tabler:package',
        class: 'group relative bg-gradient-to-r from-[#C9A227] to-[#D4B332] hover:from-[#D4B332] hover:to-[#C9A227] text-black font-semibold text-sm md:text-base px-6 py-3 md:px-8 md:py-4 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 whitespace-nowrap overflow-hidden',
      },
      { 
        text: 'Our Technology', 
        href: '/technology',
        icon: 'tabler:cpu',
        class: 'group relative bg-transparent border-2 border-white/30 hover:border-[#C9A227] text-white hover:text-[#C9A227] font-semibold text-sm md:text-base px-6 py-3 md:px-8 md:py-4 rounded-full backdrop-blur-sm hover:backdrop-blur-md shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 whitespace-nowrap'
      },
    ]}
    image={{
      src: '/images/hero-car-2.webp',
      alt: 'Premium luxury sedan with TAKAI protection showcasing company excellence',
      width: 1920,
      height: 1080
    }}
  />

  <!-- Company Values -->
  <Features
    id="values"
    title="Our Values"
    subtitle="The principles that guide everything we do"
    columns={3}
    items={[
      {
        title: 'Innovation',
        description: 'Continuously pushing the boundaries of paint protection technology through research and development.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Quality',
        description: 'Uncompromising commitment to manufacturing excellence and product performance.',
        icon: 'tabler:award',
      },
      {
        title: 'Partnership',
        description: 'Building strong relationships with distributors and installers worldwide.',
        icon: 'tabler:users',
      },
      {
        title: 'Sustainability',
        description: 'Responsible manufacturing practices and environmentally conscious product development.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Customer Focus',
        description: 'Delivering solutions that exceed customer expectations and protect their investments.',
        icon: 'tabler:users',
      },
      {
        title: 'Excellence',
        description: 'Striving for perfection in every aspect of our business operations.',
        icon: 'tabler:star',
      },
    ]}
  />

  <!-- Company Story - COMMENTED OUT FOR FUTURE USE -->
  <!--
  <Content
    isReversed
    title="Our Story"
    subtitle="A legacy of protection and innovation"
    items={[
      {
        title: 'Founded on Excellence',
        description: 'TAKAI was established with a vision to create the world\'s most advanced paint protection films.',
      },
      {
        title: 'Technology Leadership',
        description: 'Our research and development team continuously innovates to stay ahead of industry trends.',
      },
      {
        title: 'Global Reach',
        description: 'Today, TAKAI products protect vehicles in markets around the world through our distributor network.',
      },
    ]}
  />
  -->

  <!-- Manufacturing Excellence -->
  <section class="py-20 bg-gradient-to-br from-takai-blue/5 to-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-takai-blue mb-6">Manufacturing Excellence</h2>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          State-of-the-art facilities and processes delivering uncompromising quality in every TAKAI film
        </p>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Advanced Facilities -->
        <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-takai-blue/10 hover:border-takai-blue/30">
          <div class="mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-takai-blue to-blue-700 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name="tabler:building-factory" class="w-8 h-8 text-white stroke-[1.5]" />
            </div>
            <h3 class="text-2xl font-bold text-takai-blue mb-3">Advanced Facilities</h3>
          </div>
          <p class="text-gray-700 leading-relaxed mb-6">
            Modern manufacturing facilities equipped with the latest technology and quality control systems.
          </p>
          <div class="space-y-2">
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-gold rounded-full"></div>
              <span>Clean room environments</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-gold rounded-full"></div>
              <span>Automated production lines</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-gold rounded-full"></div>
              <span>Real-time monitoring systems</span>
            </div>
          </div>
        </div>

        <!-- Quality Assurance -->
        <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-takai-gold/20 hover:border-takai-gold/40">
          <div class="mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-takai-gold to-yellow-600 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name="tabler:shield-check" class="w-8 h-8 text-white stroke-[1.5]" />
            </div>
            <h3 class="text-2xl font-bold text-takai-blue mb-3">Quality Assurance</h3>
          </div>
          <p class="text-gray-700 leading-relaxed mb-6">
            Rigorous testing and quality control at every stage of the manufacturing process.
          </p>
          <div class="space-y-2">
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-red rounded-full"></div>
              <span>Multi-point inspection</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-red rounded-full"></div>
              <span>Performance testing</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-red rounded-full"></div>
              <span>Batch traceability</span>
            </div>
          </div>
        </div>

        <!-- Continuous Improvement -->
        <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-takai-red/20 hover:border-takai-red/40">
          <div class="mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-takai-red to-red-700 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name="tabler:trending-up" class="w-8 h-8 text-white stroke-[1.5]" />
            </div>
            <h3 class="text-2xl font-bold text-takai-blue mb-3">Continuous Improvement</h3>
          </div>
          <p class="text-gray-700 leading-relaxed mb-6">
            Ongoing investment in process optimization and technology advancement.
          </p>
          <div class="space-y-2">
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-blue rounded-full"></div>
              <span>R&D investment</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-blue rounded-full"></div>
              <span>Process optimization</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-600">
              <div class="w-2 h-2 bg-takai-blue rounded-full"></div>
              <span>Technology upgrades</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team & Expertise - COMMENTED OUT FOR FUTURE USE -->
  <!--
  <Content
    title="Our Team"
    subtitle="Expertise you can trust"
    items={[
      {
        title: 'Materials Scientists',
        description: 'PhD-level researchers developing next-generation polymer technologies.',
      },
      {
        title: 'Manufacturing Engineers',
        description: 'Process experts ensuring consistent quality and efficient production.',
      },
      {
        title: 'Technical Support',
        description: 'Experienced professionals providing installation training and customer support.',
      },
    ]}
  />
  -->

  <!-- Certifications & Standards -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-takai-blue mb-6">Certifications & Standards</h2>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          Meeting and exceeding the highest industry standards for quality, safety, and environmental responsibility
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <!-- ISO 9001 -->
        <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-takai-blue/10 hover:border-takai-blue/30 text-center flex flex-col h-full">
          <div class="mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-takai-blue to-blue-700 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name="tabler:certificate" class="w-10 h-10 text-white stroke-[1.5]" />
            </div>
            <h3 class="text-2xl font-bold text-takai-blue mb-3">ISO 9001</h3>
            <div class="w-16 h-1 bg-gradient-to-r from-takai-gold to-takai-red mx-auto mb-4 rounded-full"></div>
          </div>
          <p class="text-gray-700 leading-relaxed mb-6 flex-grow">
            Quality management system certification ensuring consistent product quality and customer satisfaction.
          </p>
          <div class="bg-takai-blue/5 rounded-lg p-4 mt-auto">
            <p class="text-sm font-medium text-takai-blue/90">Certified Since 2018</p>
          </div>
        </div>

        <!-- Automotive Standards -->
        <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-takai-gold/20 hover:border-takai-gold/40 text-center flex flex-col h-full">
          <div class="mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-takai-gold to-yellow-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name="tabler:car" class="w-10 h-10 text-white stroke-[1.5]" />
            </div>
            <h3 class="text-2xl font-bold text-takai-blue mb-3">Automotive Standards</h3>
            <div class="w-16 h-1 bg-gradient-to-r from-takai-gold to-takai-red mx-auto mb-4 rounded-full"></div>
          </div>
          <p class="text-gray-700 leading-relaxed mb-6 flex-grow">
            Products meet or exceed automotive industry specifications and OEM requirements worldwide.
          </p>
          <div class="bg-takai-gold/10 rounded-lg p-4 mt-auto">
            <p class="text-sm font-medium text-takai-blue/90">OEM Approved</p>
          </div>
        </div>

        <!-- Environmental Compliance -->
        <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-green-500/20 hover:border-green-500/40 text-center md:col-span-2 lg:col-span-1 flex flex-col h-full">
          <div class="mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-green-600 to-green-700 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name="tabler:leaf" class="w-10 h-10 text-white stroke-[1.5]" />
            </div>
            <h3 class="text-2xl font-bold text-takai-blue mb-3">Environmental Compliance</h3>
            <div class="w-16 h-1 bg-gradient-to-r from-takai-gold to-takai-red mx-auto mb-4 rounded-full"></div>
          </div>
          <p class="text-gray-700 leading-relaxed mb-6 flex-grow">
            Manufacturing processes comply with environmental regulations and sustainability standards.
          </p>
          <div class="bg-green-500/10 rounded-lg p-4 mt-auto">
            <p class="text-sm font-medium text-takai-blue/90">Eco-Certified</p>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- Customer Testimonials -->
  <Testimonials
    title="What Our Partners Say"
    tagline="Testimonials"
    subtitle="Trusted by professionals worldwide for superior quality and exceptional service"
    isDark={false}
    testimonials={[
      {
        testimonial: `TAKAI films consistently deliver exceptional results that exceed our customers' expectations. The self-healing technology and optical clarity are truly unmatched in the industry. We've been using TAKAI for over 8 years and have never looked back.`,
        name: 'Michael Chen',
        job: 'Master Certified Installer',
        company: 'Precision Auto Protection, Tokyo',
        rating: 5,
      },
      {
        testimonial: `The technical support and comprehensive training program provided by TAKAI has been instrumental in our business growth. Their commitment to installer success is evident in every interaction.`,
        name: 'Sarah Williams',
        job: 'Regional Distribution Manager',
        company: 'Premium Films Europe Ltd.',
        rating: 5,
      },
      {
        testimonial: `Our high-end clientele demands perfection, and TAKAI Premium Plus delivers every time. The durability and finish quality have made it our exclusive choice for luxury and exotic vehicles.`,
        name: 'David Rodriguez',
        job: 'Shop Owner & Lead Technician',
        company: 'Elite Auto Couture, California',
        rating: 5,
      },
      {
        testimonial: `TAKAI's Japanese precision engineering shows in every installation. The pre-cut patterns are incredibly accurate, and the film's performance in harsh Australian conditions has been outstanding.`,
        name: 'James Thompson',
        job: 'Certified TAKAI Specialist',
        company: 'Aussie Protection Films, Sydney',
        rating: 5,
      },
      {
        testimonial: `After 15 years in the industry, I can confidently say TAKAI offers the best combination of product quality, technical innovation, and business support. It's a true partnership.`,
        name: 'Maria Gonzalez',
        job: 'Master Trainer & Distributor',
        company: 'TAKAI Latin America',
        rating: 5,
      },
      {
        testimonial: `The hydrophobic properties and stain resistance of TAKAI films have revolutionized our service offerings. Our customers are amazed by the long-term performance and appearance retention.`,
        name: 'Robert Kim',
        job: 'Technical Director',
        company: 'Seoul Premium Auto Care',
        rating: 5,
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white"></div>
    </Fragment>
  </Testimonials>

  <!-- Call to Action -->
  <CallToAction
    title="Partner With TAKAI"
    subtitle="Join our network of distributors and installers worldwide"
    actions={[
      {
        variant: 'primary',
        text: 'Become a Distributor',
        href: '/distributors',
      },
      {
        text: 'Contact Us',
        href: '/contact',
      },
    ]}
  />
</Layout>
